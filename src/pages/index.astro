---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import me from "../images/tim.jpg";
import { fade } from "astro:transitions";
---

<Layout title="Tim Hilton - Frontend Developer">
	<main>
		<div class="hero-container">
			<div
				class="content"
				transition:animate={fade({ duration: "0.4s" })}
			>
				<h1 transition:name="fullName">Tim Hilton</h1>
				<p>
					crafting <span transition:name="frontend">frontend</span> experiences
					for over a decade
				</p>
			</div>
			<div class="image-wrapper" transition:name="image">
				<Image src={me} alt="Tim Hilton" />
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		min-height: max-content;
		height: calc(100vh - 48px);
		padding: 8rem 2rem 2rem;
	}

	.hero-container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: center;
	}

	.image-wrapper {
		position: relative;
		aspect-ratio: 1;
		width: 35vw;
		border: 4px solid #8e8d8d;
		border-radius: 2rem;
		overflow: hidden;

		@media screen and (max-width: 768px) {
			width: 74vw;
		}
	}

	.image-wrapper img {
		width: 100%;
		height: 100%;
	}

	.content {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		align-items: flex-end;

		@media screen and (max-width: 768px) {
			align-items: center;
			
		}
	}

	h1 {
		font-size: 3.5rem;
		font-weight: bold;
		margin: 0;
	}

	p {
		font-size: 1.25rem;
		margin: 0;
	}

	@media (max-width: 768px) {
		.hero-container {
			grid-template-columns: 1fr;
			text-align: center;
		}

		h1 {
			font-size: 2.5rem;
		}

		.image-wrapper {
			max-width: 400px;
			margin: 0 auto;
		}
	}
</style>
